<% content_for :title, "Settings â€” BSMAI" %>
<% content_for :nav_column do %>
  <header>
     <%= render "layouts/logo_and_drop_down_menu" %>
  </header>
  <section id="menu" data-controller="radio-behavior" data-radio-behavior-selected-class="relationship" style="padding: 10px;>
    <% @settings_menu.each do |controller, settings_items| %>
      <div class="mb-5">
        <%= render partial: "layouts/settings_item", collection: settings_items, locals: { controller: controller } %>
      </div>
    <% end %>
  </section>
<% end %>

<% content_for :main do %>
  <header id="narrow-header" class="flex-none text-lg text-center h-14 md:hidden">
    <div class="flex items-center justify-between flex-1 mb-2 border-b border-gray-300 text-gray-950 dark:text-gray-100 dark:border-gray-600 dark:bg-gray-800">
      <%= button_tag type: "button",
        class: "inline-flex px-2 ml-1 cursor-pointer group",
        data: {
          action: "transition#toggleClass"
        } do
      %>
        <%= icon "bars-3", variant: :outline, size: 22, class: 'stroke-2 text-gray-950 dark:text-gray-100', title: "Menu", tooltip: :right %>
      <% end %>
    </div>
  </header>

  <section class="flex flex-col flex-grow overflow-y-auto overflow-x-clip">
    <div class="w-full md:max-w-none lg:max-w-[700px] xl:max-w-[810px] mx-auto mt-2 py-7 px-10 pr-14">
      <%= yield %>
    </div>
  </section>
<% end %>

<%= render template: "layouts/application" %>
