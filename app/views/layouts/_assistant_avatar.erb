<%# locals: (assistant:, size:, classes: nil) -%>
<% classes = %|
    rounded-full
    w-#{size} h-#{size}
    #{size > 6 ? "text-sm" : "text-xs"}
    #{classes}
|%>
<% logo = if assistant.model.include?("gpt")
  "openai_logo.svg"
elsif assistant.model.include?("sonar")
  "perplexity_ai_logo.svg"
elsif assistant.model.include?("claude")
  "claude_logo.svg"
elsif assistant.model.include?("gemini")
  "google_gemini_logo.svg"
elsif assistant.model.include?("llama")
  "meta_ai_logo.svg"
elsif assistant.model.include?("mistral")
  "mistral_logo.svg"
elsif assistant.model.include?("deepseek")
  "deepseek_logo.svg"
end
%>
  
<% if logo %>
  <picture class="<%= classes %> bg-white border border-gray-100 overflow-hidden">
    <%= image_tag(logo, class: "w-full h-full") %>
  </picture>
<% else %>
  <picture
    class="
          <%= classes %>
          bg-blue-200 text-black
          flex justify-center items-center
          "
  >
    <%= assistant.initials %>
  </picture>
<% end %>