<% content_for :title, "Prompt Editor â€” BSMAI" %>
<% content_for :nav_column do %>
  <header class="pl-2 py-7 text-3xl relative">
    <%= render "layouts/logo_and_drop_down_menu" %>
  </header>
  <section id="menu" data-controller="radio-behavior" data-radio-behavior-selected-class="relationship">
    <% @settings_menu.each do |controller, prompt_editor_items| %>
      <div class="mb-5">
        <%= render partial: "layouts/prompt_editor_item", collection: prompt_editor_items, locals: { controller: controller } %>
      </div>
    <% end %>
  </section>
<% end %>

<% content_for :main do %>
  <header class="absolute right-0 ml-2 mt-2 mb-3 h-10 text-lg">
    <%= link_to root_path, class: "block cursor-pointer inline-flex mr-3 px-2 py-2 group" do %>
      <%= icon "x-mark",
            variant: :outline,
            size: 22,
            class: %|
              stroke-2
              text-zinc-600 group-hover:text-zinc-900 dark:text-zinc-400 dark:group-hover:text-white
            |,
            title: "Close",
            tooltip: :left
      %>
    <% end %>
  </header>

  <section class="flex flex-col flex-grow overflow-y-auto overflow-x-clip">
    <div class="w-full md:max-w-none lg:max-w-[1200px] xl:max-w-[1200px] mx-auto mt-2 py-7 px-10 pr-14">
      <%= yield %>
    </div>
  </section>
<% end %>

<%= render template: "layouts/application" %>