<div class="mx-auto md:w-2/3 w-full">
  <h1 class="text-3xl">
   Editing <%= @prompt.name %>
  </h1>

  <%= render "form", prompt: @prompt %>

  <%= button_to "Delete",
      prompt_editor_prompt_path(@prompt),
      method: :delete,
      data: { turbo_confirm: "Are you sure?" },
      form: { class: "inline-block" },
      class: %|
        ml-5 py-3 px-5
        bg-white dark:bg-gray-500
        border border-gray-300 dark:border-gray-500
        rounded-lg
        font-medium
      |
  %>

  <p class="float-right inline-block ml-5">
    <%= link_to "Back", prompt_editor_prompts_path(prompt_process_id: @prompt.prompt_process.id), class: "float-right inline-block ml-5 py-3" %>
  </p>
</div>
