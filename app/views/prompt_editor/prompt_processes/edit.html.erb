<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing prompt_process</h1>

  <turbo-frame id="prompt_process-<%= @prompt_process.id %>">
    <%= form_with(model: [:prompt_editor,@prompt_process], data: { controller: "inline-edit" }, class: "contents") do |form| %>
      <%= form.text_field :name,
        id: "edit-prompt_process",
        autofocus: true,
        class: %|
          block shadow rounded-md outline-none
          px-[7px] pt-[7px] pb-[7px]
          w-full
          text-sm
          disabled:text-gray-300
          dark:text-black
        |,
        data: {
          inline_edit_target: "input",
          action: %|
            blur->inline-edit#submitForm
            keydown.enter->inline-edit#submitForm:prevent
            keydown.esc->inline-edit#abort
          |
        }
      %>
    <% end %>
  </turbo-frame>

  <%= link_to "Show this prompt_process", [:prompt_editor,@prompt_process], class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
